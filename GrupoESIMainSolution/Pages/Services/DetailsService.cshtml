@page
@model GrupoESINuevo.DetailsServiceModel

@{
    ViewData["Title"] = "Details";
}
    <div class="containter backgroundWhite">
        <h2 class="text-info">Detalles</h2>
        <div class="card container">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-6">
                    <i class="fa fa-user-o"></i>
                </div>
            </div>
            <div class="card-body container">
                <div>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ServiceModel.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ServiceModel.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ServiceModel.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ServiceModel.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ServiceModel.serviceType.Category)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ServiceModel.serviceType.Category)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ServiceModel.ApplicationUser)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ServiceModel.ApplicationUser.Name)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-page="./EditService" asp-route-serviceId="@Model.ServiceModel.ID">Editar</a> |
                    <a asp-page="./IndexService">Regresar a la lista</a>
                </div>
            </div>
        </div>
    </div>




