@page
@model GrupoESI.EditeServiceModel

@{
    ViewData["Title"] = "Edit";
}
    <div class="container backgroundWhite">
        <h2 class="text-info">Editar Servicio</h2>
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-6">
                    <i class="fa fa-user-o"></i>
                </div>
            </div>
            <div class="card-body container">
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ServiceModel.serviceId" />
                            <div class="form-group">
                                <label asp-for="ServiceModel.Name" class="control-label"></label>
                                <input asp-for="ServiceModel.Name" class="form-control" />
                                <span asp-validation-for="ServiceModel.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ServiceModel.Description" class="control-label"></label>
                                <input asp-for="ServiceModel.Description" class="form-control" />
                                <span asp-validation-for="ServiceModel.Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ServiceModel.serviceType.Category" class="control-label"></label>
                                <input disabled asp-for="ServiceModel.serviceType.Category" class="form-control" />
                                <span asp-validation-for="ServiceModel.serviceType.Category" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
                <div>
                    <a asp-page="./IndexService">Regresar a la lista</a>
                </div>
            </div>
        </div> 
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
