@page
@model GrupoESINuevo.DetailsQuotationModel

@{
    ViewData["Title"] = "Details";
}
    <div class="container backgroundWhite">
        <h2 class="text-info">Detalles cotización</h2>
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-6">
                    <i class="fa fa-user-o"></i>
                </div>
            </div>
        </div>
        <div class="card-body container">
            <div class="col-md-6 offset-md-3">
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Quotation.OrderDetails.Service.ApplicationUser.Name"></label>
                    </div>
                    <div class="col-sm-8" style="padding-bottom:5px;">
                        <input asp-for="Quotation.OrderDetails.Service.ApplicationUser.Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Quotation.OrderDetails.Service.ApplicationUser.CompanyName"></label>
                    </div>
                    <div class="col-sm-8" style="padding-bottom:5px;">
                        <input asp-for="Quotation.OrderDetails.Service.ApplicationUser.CompanyName" disabled class="form-control" />
                    </div>
                </div>
            </div>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Quotation.Description)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Quotation.Description)
                    </dd>
                </dl>
            </div>
            <div>
                <a class="btn btn-info" asp-page="./EditQuotation" asp-route-id="@Model.Quotation.OrderDetails.Id">Editar</a> |
                <a asp-page="./IndexQuotation">Regresar a la lista</a>
            </div>

        </div>
    </div>
    

    