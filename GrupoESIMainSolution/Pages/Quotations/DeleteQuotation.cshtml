@page
@model GrupoESINuevo.DeleteQuotationModel

@{
    ViewData["Title"] = "Delete";
}


    <div class="container backgroundWhite">
        <h2 class="text-info">Borrar Cotización</h2>
        <div class="card container">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-6">
                    <i class="fa fa-user-o"></i>
                </div>
            </div>
            <div class="card-body container">
                <div class="col-md-6 offset-md-3">
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="OrderDetails.Service.ApplicationUser.Name"></label>
                        </div>
                        <div class="col-sm-8" style="padding-bottom:5px;">
                            <input asp-for="OrderDetails.Service.ApplicationUser.Name" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label asp-for="OrderDetails.Service.ApplicationUser.CompanyName"></label>
                        </div>
                        <div class="col-sm-8" style="padding-bottom:5px;">
                            <input asp-for="OrderDetails.Service.ApplicationUser.CompanyName" disabled class="form-control" />
                        </div>
                    </div>
                </div>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OrderDetails.Service.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OrderDetails.Service.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.OrderDetails.Cost)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OrderDetails.Cost)
                        </dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="OrderDetails.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-page="./CreateQuotation" asp-route-orderDetailsId="@Model.OrderDetails.Id">Regresar a la lista</a>
                    </form>
                </div>
            </div>
        </div>
        </div>
        
