@page
@model GrupoESI.CreateMaterialModel

@{
    ViewData["Title"] = "Create";
}
    <div class="container backgroundWhite">
        <h2 class="text-info">Agregar material</h2>
        <hr />
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container-xl">
                <div class="col-6">
                    <i class="fa fa-user-o"></i>
                </div>
            </div>
            <div class="card-body container">
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <input hidden asp-for="_TaskMaterialVM.taskId" />
                            <div class="col-md-6 offset-md-3">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <label asp-for="_TaskMaterialVM.TareaModel.Name"></label>
                                    </div>
                                    <div class="col-sm-8" style="padding-bottom:5px;">
                                        <input asp-for="_TaskMaterialVM.TareaModel.Name" disabled class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <label asp-for="_TaskMaterialVM.TareaModel.Description"></label>
                                    </div>
                                    <div class="col-sm-8" style="padding-bottom:5px;">
                                        <input asp-for="_TaskMaterialVM.TareaModel.Description" disabled class="form-control" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-4">
                                        <label asp-for="_TaskMaterialVM.TareaModel.CostHandLabor"></label>
                                    </div>
                                    <div class="col-sm-8" style="padding-bottom:5px;">
                                        <input asp-for="_TaskMaterialVM.TareaModel.CostHandLabor" disabled class="form-control" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <label asp-for="_TaskMaterialVM.TareaModel.Cost"></label>
                                    </div>
                                    <div class="col-sm-8" style="padding-bottom:5px;">
                                        <input asp-for="_TaskMaterialVM.TareaModel.Cost" disabled class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="_TaskMaterialVM.MaterialModel.Name" class="control-label"></label>
                                <input asp-for="_TaskMaterialVM.MaterialModel.Name" class="form-control" />
                                <span asp-validation-for="_TaskMaterialVM.MaterialModel.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="_TaskMaterialVM.MaterialModel.Description" class="control-label"></label>
                                <input asp-for="_TaskMaterialVM.MaterialModel.Description" class="form-control" />
                                <span asp-validation-for="_TaskMaterialVM.MaterialModel.Description" class="text-danger"></span>
                            </div>
                            @if (User.IsInRole("Admin") || User.IsInRole("Provider"))
                            {
                                <div class="form-group">
                                    <label asp-for="_TaskMaterialVM.MaterialModel.Price" class="control-label"></label>
                                    <input asp-for="_TaskMaterialVM.MaterialModel.Price" class="form-control" />
                                    <span asp-validation-for="_TaskMaterialVM.MaterialModel.Price" class="text-danger"></span>
                                </div>
                            }
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
    
                <div>
                    <a asp-page="../Quotations/CreateQuotation" asp-route-orderDetailsId="@Model._TaskMaterialVM.orderDetailsId">Regresar a la cotizacion</a>
                </div>
                </div>
            </div>
        </div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
